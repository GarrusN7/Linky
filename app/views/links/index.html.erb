<h1>All the Links</h1>
<%= link_to "Add a link", new_link_path, class: "btn btn-info" %>
<% @links.each do |link| %>
<hr>
  <h3>
    <%= vote_badge(link) %>
    <%= link_to link.title, link.url%> 
    <small><%= link.category.capitalize %></small>
    <%= link_to "VIEW LINK", link, class: "btn btn-primary" %>
    <%= link_to "UPVOTE", upvote_path(link), class: "btn btn-success" %>
    <%= link_to "DOWNVOTE", downvote_path(link), class: "btn btn-danger" %>
  </h3>
<% end %>